ENTITY dec_display IS
PORT (	fl	: IN BIT_VECTOR(3 DOWNTO 0);
	display		: OUT BIT_VECTOR(6 DOWNTO 0)
);
END dec_display;

ARCHITECTURE behavior OF dec_display IS
BEGIN
	PROCESS(fl)
		BEGIN
			CASE fl IS
				WHEN "0000" => display <= "1100111";
				WHEN "0000" => display <= "0110000";
				WHEN "0000" => display <= "1101101";
				WHEN "0000" => display <= "1111001";
				WHEN "0000" => display <= "0110011";
				WHEN "0000" => display <= "1011011";
				WHEN "0000" => display <= "1011111";
				WHEN "0000" => display <= "1110000";
				WHEN "0000" => display <= "1111111";
				WHEN OTHERS => display <= "0000000";
			END CASE;
	END PROCESS;
END behavior;
